@model List<Category>
@{
    Layout = "_adminLayout";
}

<table class="table table-bordered table-hover" width="50%">
    <thead>Category table:</thead>
    <tr>
        <th>
            Name
        </th>
        <th>
            Description
        </th>
        <th>
            Type
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td>@item.type</td>
            <td>
                <a class="btn btn-success" asp-action="Edit" asp-controller="Category" asp-route-id="@item.Id">Edit</a>
                <a class="btn btn-success" asp-action="Delete" asp-controller="Category" asp-route-id="@item.Id" onclick="ConfirmDelete(event)">Delete</a>
            </td>
        </tr>
    }
</table>

<a class="btn btn-success" asp-action="Add_categoery" asp-controller="Category">Add new Categoery</a>




<script>
    function ConfirmDelete() {
        document.getElementById("")
        var accept = confirm("Are You Sure?");
        if (accept == false) {
            event.preventDefault();
        }
    }
</script>