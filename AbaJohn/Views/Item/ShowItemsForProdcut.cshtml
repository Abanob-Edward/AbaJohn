@model IEnumerable<AbaJohn.Models.Item>
@{


    if (User.IsInRole("seller") || User.IsInRole("admin"))
    {

        Layout = "_businessAccLayout";
    }

}



<div class="row" style="margin:30px; padding:10px">
       
        <table class="table table-bordered" style="text-align:center">

            <tr>  
                <th>
                    Color
                </th>
                <th>
                    Size
                </th>
                <th>
                    Quantity
                </th>
                <th>
                    Product Name
                </th>
              
                <th colspan="2">
                    Actions
                </th>
               
            </tr>
             @foreach (var item in Model)
                {
                   <tr>
            
           
                    <td>@item.Color</td>
                    <td>@item.size</td>
                    <td>@item.Quantity</td>
            
                    <td>@ViewBag.ProductName</td>
                 <td>
                            <a class="btn btn-dark" style="color:white; border: 1px solid red; background-color: #000000; " asp-action="Edit_item" asp-controller="Item" asp-route-id="@item.ID">Edit</a>

                </td>

                <td>
                            <a class="btn btn-dark" style="color:white; border: 1px solid red; background-color: #000000" asp-action="DeleteItem" asp-controller="Item" asp-route-ItemId="@item.ID" onclick="ConfirmDelete(event)">Delete</a>

                </td>
            </tr>
         }
        
</table>

    <a class="btn btn-dark" style="color:white; border: 1px solid red; background-color: #000000" onclick="myFunction()"  >Add New Item </a>

</div>






