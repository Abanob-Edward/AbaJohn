@model AbaJohn.Models.Item

@{
    Layout = "_businessAccLayout";
}


<fieldset style="border: 1px solid #000000; padding: 20px; border-radius: 10px;  margin: 65px">
    <legend style=" color:#000000; padding: 5px 6px; margin:4px 52px; width: 12%;" class="align-content-center">  Edit Item </legend>



    <div class="continer">


        <form asp-action="Edit_item">
            <div asp-validation-summary="All" class="text-danger"></div>


            <div class="form-row">
                <div class="form-group col-md-6">
                    <label style="color:black" asp-for="Color" class="control-label"></label>
                    <input asp-for="Color" class="form-control" />
                    <span asp-validation-for="Color" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label style="color:black" asp-for="size" class="control-label"></label>
                    <input asp-for="size" class="form-control" />
                    <span asp-validation-for="size" class="text-danger"></span>
                </div>
            </div>




            <div class="form-row">
                <div class="form-group col-md-6">
                    <label style="color:black" asp-for="Quantity" class="control-label"></label>
                    <input asp-for="Quantity" class="form-control" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">

                    <label class="control-label">Select Product Name </label>
                    <select style="color:black" name="productID" id="productID" class="form-control">

                        @foreach (var pro in ViewBag.products)
                        {

                            <option value="@pro.ID">@pro.Name</option>
                        }
                    </select>


                </div>


                <div class="container" style="display: inline-block">
                    <div class="form-group" style="display: inline-block;">
                        <input class="btn btn-dark" style="color:white; border: 1px solid red;  background-color: #000000" type="submit" value="ADD" />
                    </div>

                    <div style="display: inline-block;">
                        <a class="btn btn-dark" style="color:white; border: 1px solid red;  background-color: #000000" asp-action="ShowItemsForProdcut" asp-route-ProductID="@Model.productID" class="btn btn-primary"> Back </a>
                    </div>
                </div>

              
                 

        </form>
    </div>
    
</fieldset>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}